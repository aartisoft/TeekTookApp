<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.xvideoplayer.MxVideoPlayerWidget
        android:id="@+id/list_video_player"
        android:layout_width="match_parent"
        android:layout_height="1000dp" />

    <LinearLayout
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:orientation="vertical">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom">

            <com.v2infotech.android.tiktok.Utils.CircularImageView
                android:id="@+id/profile"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <TextView
                android:layout_width="@dimen/size20"
                android:layout_height="@dimen/size20"
                android:background="@drawable/ic_add_box_black_24dp"
                app:layout_anchor="@id/profile"
                app:layout_anchorGravity="bottom|center" />
        </android.support.design.widget.CoordinatorLayout>

        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <com.v2infotech.android.tiktok.Utils.CircularImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size20"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1.5k"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.v2infotech.android.tiktok.Utils.CircularImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size20"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1.5k"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.v2infotech.android.tiktok.Utils.CircularImageView
            android:id="@+id/rotate_profile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait" />
    </LinearLayout>

</RelativeLayout>